<div class="container">
    <div class="container-small-white">
        <h1>Créer un nouveau projet</h1>
        <% @project.errors.each do | attr, msg | %>
            <div class="error-message"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span><span><%= msg %></span></div>
        <% end %>
        <%= form_for @project, url: dashboard_project_index_path, html: { method: :post, multipart: true } do |f| %>
            <div class="field">
                <%= f.text_field :name, required: true, placeholder: "Nom du projet" %>
            </div>
            <div class="field">
                <%= f.text_field :technos, required: true, placeholder: "Technologies du projet" %>
            </div>
            <div class="field">
                <%= f.number_field :project_duration, placeholder: "Temps de réalisation du projet (semaines)" %>
            </div>
            <div class="field">
                <%= f.text_area :description, required: true, placeholder: "Description du projet" %>
            </div>
            <div class="field">
                <%= f.file_field :screenshots, class: 'file-field' %>
            </div>
            <%= f.submit 'Créer le projet', class: 'btn btn-default btn-big btn-green' %>
        <% end %>
    </div>
</div>
