<div class="container">
  <div class="loginContainer">
    <h2>Connexion</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, required: true, placeholder: 'Adresse email' %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", required: true, placeholder: 'Password' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-default btn-big btn-green' %>
      </div>
    <% end %>
  </div>
</div>


